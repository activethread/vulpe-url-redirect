<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[vur] %p [%t] %C{1}.%M(%L) | %m%n" />
		</layout>
	</appender>

	<appender name="file" class="org.apache.log4j.RollingFileAppender">
		<param name="Threshold" value="INFO" />
		<param name="File" value="${catalina.home}/logs/vur.log" />
		<param name="Append" value="true" />
		<param name="MaxFileSize" value="1024KB" />
		<param name="MaxBackupIndex" value="10" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[vur] [%d{dd/MM/yyyy HH\:mm\:ss,SSS}] - %-5p - %x [%C.%M()\:%L] - %m%n" />
		</layout>
	</appender>

	<category name="org">
		<priority value="WARN" />
		<appender-ref ref="file" />
	</category>

	<category name="com">
		<priority value="WARN" />
		<appender-ref ref="file" />
	</category>

	<category name="freemarker">
		<priority value="ERROR" />
		<appender-ref ref="file" />
	</category>

	<category name="org.vulpe.vur">
		<priority value="DEBUG" />
		<appender-ref ref="file" />
	</category>

	<root>
		<level value="ERROR" />
		<appender-ref ref="stdout" />
		<appender-ref ref="file" />
	</root>
</log4j:configuration>
